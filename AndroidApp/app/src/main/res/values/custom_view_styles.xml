<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="YouPlusButton">
        <attr name="primaryColor" format="color" />
        <attr name="pressedColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="text" format="string" />
        <attr name="icon" />
        <attr name="fillStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="filled" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SquareImageView">
        <attr name="stretchMode" format="enum">
            <enum name="min" value="0" />
            <enum name="width" value="1" />
            <enum name="height" value="2" />
        </attr>
    </declare-styleable>

