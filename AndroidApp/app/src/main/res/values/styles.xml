<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="AutoCompleteTextcustom_style" >
        <item name="android:background">@drawable/selector_bg_white</item>
        <!--<item name="android:background">@drawable/newspinner</item>-->



    </style>

    <style name="pin_edittext_style">
        <item name="android:gravity">center</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:maxLength">10</item>
        <item name="android:minEms">10</item>
        <item name="android:inputType">number</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="pinprompter_edittext_style">
        <item name="android:gravity">center</item>
        <item name="android:cursorVisible">true</item>

        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="AppTheme.Formspinner">
        <item name="android:textSize">18dp</item>

        <item name="android:typeface">serif</item>

        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#000000</item>

        <item name="android:width">130dp</item>
    </style>

    <style name="AppTheme.FormController">
        <item name="android:width">150dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>

        <!--   <item name="android:textColor">@color/app_maroon</item>
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>-->
    </style>


    <style name="AppTheme.FormLable">
        <item name="android:textSize">18dp</item>

        <item name="android:typeface">serif</item>

        <item name="android:textColor">#000000</item>

        <!--
                <item name="android:textColor">@color/actionbar_bg</item>
        -->
        <!--<item name="android:background" >#2494f2</item>-->

        <item name="android:width">130dp</item>
    </style>
    <style name="AppTheme.FormButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#ffffff</item>

        <!--

        #00bff1
        -->
        <item name="android:background">@drawable/round</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="AppTheme.FormGroup">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>



    </style>
    <style name="AppTheme.RootLayout">
        <item name="android:padding">10dp</item>

    </style>

    <style name="Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spinner_height</item>
        <item name="android:background">@drawable/greyspinner_bg</item>
        <item name="android:popupBackground">#2d2e2e</item>
    </style>
</resources>
